<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Админ панель</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 fs-4 fw-bold border-bottom">
                <i class="bi bi-shield-lock"></i> Админ
            </div>
            <div class="list-group list-group-flush">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-speedometer2"></i> Панель управления
                </a>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-box-seam"></i> Товары
                </a>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-tags"></i> Категории
                </a>
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-cart-check"></i> Заказы
                </a>
                <a asp-area="Admin" asp-controller="Import" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-upload"></i> Импорт каталога
                </a>
                <div class="border-top my-2"></div>
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-arrow-left"></i> Вернуться на сайт
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <div class="ms-auto">
                        <span class="navbar-text me-3">
                            <i class="bi bi-person-circle"></i> @User.Identity?.Name
                        </span>
                    </div>
                </div>
            </nav>

            <!-- Alerts -->
            @if (TempData["Success"] != null)
            {
                <div class="container-fluid mt-3">
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="bi bi-check-circle"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="container-fluid mt-3">
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            }

            <!-- Main Content -->
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle sidebar
        document.getElementById("sidebarToggle").addEventListener("click", function(e) {
            e.preventDefault();
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
