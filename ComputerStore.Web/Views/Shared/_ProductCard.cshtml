@model ComputerStore.Shared.DTOs.ProductDto

<div class="card h-100 shadow-sm product-card">
    @if (Model.HasDiscount)
    {
        <div class="position-absolute top-0 end-0 m-2">
            <span class="badge bg-danger">-@Model.DiscountPercentage%</span>
        </div>
    }

    <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name"
                 style="height: 200px; object-fit: contain; padding: 15px;" />
        }
        else
        {
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                 style="height: 200px;">
                <i class="bi bi-image fs-1 text-muted"></i>
            </div>
        }
    </a>

    <div class="card-body d-flex flex-column">
        <h6 class="card-title">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id"
               class="text-decoration-none text-dark">
                @Model.Name
            </a>
        </h6>

        <p class="card-text text-muted small mb-2">@Model.CategoryName</p>

        @if (!string.IsNullOrEmpty(Model.Manufacturer))
        {
            <p class="card-text small text-secondary mb-2">@Model.Manufacturer</p>
        }

        <!-- Rating -->
        @if (Model.ReviewCount > 0)
        {
            <div class="mb-2">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Model.Rating)
                    {
                        <i class="bi bi-star-fill text-warning"></i>
                    }
                    else if (i - 0.5 <= Model.Rating)
                    {
                        <i class="bi bi-star-half text-warning"></i>
                    }
                    else
                    {
                        <i class="bi bi-star text-warning"></i>
                    }
                }
                <small class="text-muted">(@Model.ReviewCount)</small>
            </div>
        }

        <!-- Price -->
        <div class="mt-auto">
            @if (Model.HasDiscount)
            {
                <div>
                    <span class="text-decoration-line-through text-muted">$@Model.Price.ToString("N2")</span>
                </div>
                <h5 class="text-danger mb-0">$@Model.FinalPrice.ToString("N2")</h5>
            }
            else
            {
                <h5 class="text-primary mb-0">$@Model.Price.ToString("N2")</h5>
            }
        </div>

        <!-- Stock status -->
        <div class="mt-2">
            @if (Model.InStock)
            {
                <small class="text-success">
                    <i class="bi bi-check-circle"></i> В наличии
                </small>
            }
            else
            {
                <small class="text-danger">
                    <i class="bi bi-x-circle"></i> Нет в наличии
                </small>
            }
        </div>

        <!-- Add to cart button -->
        @if (Model.InStock)
        {
            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mt-3">
                <input type="hidden" name="productId" value="@Model.Id" />
                <input type="hidden" name="quantity" value="1" />
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-cart-plus"></i> В корзину
                </button>
            </form>
        }
        else
        {
            <button class="btn btn-secondary w-100 mt-3" disabled>
                Недоступно
            </button>
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }
</style>
