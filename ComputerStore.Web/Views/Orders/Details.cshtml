@using ComputerStore.Domain.Enums
@model ComputerStore.Shared.DTOs.OrderDetailsDto
@{
    ViewData["Title"] = $"Заказ #{Model.OrderNumber}";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Мои заказы</a></li>
            <li class="breadcrumb-item active">Заказ #@Model.OrderNumber</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <!-- Payment Alert -->
            @if (!Model.IsPaid && Model.Status != ComputerStore.Domain.Enums.OrderStatus.Cancelled)
            {
                <div class="alert alert-warning shadow mb-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h5 class="mb-1">
                                <i class="bi bi-exclamation-triangle-fill"></i> Заказ ожидает оплаты
                            </h5>
                            <p class="mb-0">Пожалуйста, оплатите заказ для начала обработки</p>
                        </div>
                        <div>
                            <a asp-controller="Payment" asp-action="Index" asp-route-orderId="@Model.Id"
                               class="btn btn-warning btn-lg">
                                <i class="bi bi-credit-card"></i> Оплатить сейчас
                            </a>
                        </div>
                    </div>
                </div>
            }
            else if (Model.IsPaid)
            {
                <div class="alert alert-success shadow mb-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-0">Заказ оплачен</h5>
                            @if (Model.PaidDate.HasValue)
                            {
                                <small class="text-muted">Дата оплаты: @Model.PaidDate.Value.ToString("dd.MM.yyyy HH:mm")</small>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Order Header -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Заказ #@Model.OrderNumber</h4>
                        @switch (Model.Status)
                        {
                            case ComputerStore.Domain.Enums.OrderStatus.Pending:
                                <span class="badge bg-warning text-dark fs-6">@Model.StatusDisplay</span>
                                break;
                            case ComputerStore.Domain.Enums.OrderStatus.Processing:
                                <span class="badge bg-info fs-6">@Model.StatusDisplay</span>
                                break;
                            case ComputerStore.Domain.Enums.OrderStatus.Shipped:
                                <span class="badge bg-light text-dark fs-6">@Model.StatusDisplay</span>
                                break;
                            case ComputerStore.Domain.Enums.OrderStatus.Delivered:
                                <span class="badge bg-success fs-6">@Model.StatusDisplay</span>
                                break;
                            case ComputerStore.Domain.Enums.OrderStatus.Cancelled:
                                <span class="badge bg-danger fs-6">@Model.StatusDisplay</span>
                                break;
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Дата заказа:</strong><br />
                            @Model.OrderDate.ToString("dd MMMM yyyy, HH:mm")
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Способ оплаты:</strong><br />
                            @switch (Model.PaymentMethod)
                            {
                                case ComputerStore.Domain.Enums.PaymentMethod.CreditCard:
                                    <span><i class="bi bi-credit-card"></i> Кредитная карта</span>
                                    break;
                                case ComputerStore.Domain.Enums.PaymentMethod.DebitCard:
                                    <span><i class="bi bi-credit-card-2-front"></i> Дебетовая карта</span>
                                    break;
                                case ComputerStore.Domain.Enums.PaymentMethod.Cash:
                                    <span><i class="bi bi-cash"></i> Наличные при получении</span>
                                    break;
                                default:
                                    <span>@Model.PaymentMethodDisplay</span>
                                    break;
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(Model.TrackingNumber))
                        {
                            <div class="col-md-12 mb-3">
                                <strong>Трек-номер:</strong><br />
                                <code class="fs-6">@Model.TrackingNumber</code>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Состав заказа</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.OrderItems)
                    {
                        <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="me-3">
                                @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                {
                                    <img src="@item.ProductImageUrl" alt="@item.ProductName"
                                         style="width: 80px; height: 80px; object-fit: contain;" />
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center"
                                         style="width: 80px; height: 80px;">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@item.ProductName</h6>
                                <small class="text-muted">
                                    Цена: $@item.UnitPrice.ToString("N2") × @item.Quantity шт.
                                </small>
                            </div>
                            <div class="text-end">
                                <strong class="fs-5">$@item.TotalPrice.ToString("N2")</strong>
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Сумма товаров:</span>
                            <strong>$@Model.SubTotal.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Доставка:</span>
                            <strong>$@Model.ShippingCost.ToString("N2")</strong>
                        </div>
                        @if (Model.DiscountAmount.HasValue && Model.DiscountAmount > 0)
                        {
                            <div class="d-flex justify-content-between mb-2 text-success">
                                <span>Скидка:</span>
                                <strong>-$@Model.DiscountAmount.Value.ToString("N2")</strong>
                            </div>
                        }
                        <hr />
                        <div class="d-flex justify-content-between">
                            <h5>Итого:</h5>
                            <h5 class="text-primary">$@Model.TotalAmount.ToString("N2")</h5>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Status == OrderStatus.Delivered)
            {
                <div class="card">
                    <div class="card-header bg-success">
                        Оцените товары
                    </div>
                    @foreach (var item in Model.OrderItems)
                    {
                        <a asp-controller="Reviews" asp-action="Create"
                           asp-route-productId="@item.ProductId"
                           asp-route-orderId="@Model.Id">
                            Оставить отзыв
                        </a>
                    }
                </div>
            }

            <!-- Shipping Information -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-truck"></i> Информация о доставке</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="mb-2">
                                <strong>Адрес доставки:</strong><br />
                                @Model.ShippingAddress<br />
                                @Model.ShippingCity, @Model.ShippingPostalCode<br />
                                @Model.ShippingCountry
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="card shadow mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> Комментарий</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Actions -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Действия</h5>
                </div>
                <div class="card-body">
                    @if (!Model.IsPaid && Model.Status != ComputerStore.Domain.Enums.OrderStatus.Cancelled)
                    {
                        <div class="d-grid gap-2 mb-3">
                            <a asp-controller="Payment" asp-action="Index" asp-route-orderId="@Model.Id"
                               class="btn btn-warning btn-lg">
                                <i class="bi bi-credit-card"></i> Оплатить заказ
                            </a>
                        </div>
                        <hr />
                    }

                    <div class="d-grid gap-2">
                        @if (Model.Status == ComputerStore.Domain.Enums.OrderStatus.Pending ||
                                                Model.Status == ComputerStore.Domain.Enums.OrderStatus.Processing)
                        {
                            <form asp-action="Cancel" asp-route-id="@Model.Id" method="post"
                                  onsubmit="return confirm('Вы уверены, что хотите отменить этот заказ?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-x-circle"></i> Отменить заказ
                                </button>
                            </form>
                        }

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> К списку заказов
                        </a>

                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-success">
                            <i class="bi bi-shop"></i> Продолжить покупки
                        </a>
                    </div>
                </div>
            </div>

            <!-- Order Timeline -->
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> История заказа</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item @(Model.Status >= ComputerStore.Domain.Enums.OrderStatus.Pending ? "completed" : "")">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <strong>Заказ создан</strong><br />
                                <small class="text-muted">@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>
                        </div>

                        @if (Model.IsPaid)
                        {
                            <div class="timeline-item completed">
                                <div class="timeline-marker"></div>
                                <div class="timeline-content">
                                    <strong>Оплачен</strong><br />
                                    @if (Model.PaidDate.HasValue)
                                    {
                                        <small class="text-muted">@Model.PaidDate.Value.ToString("dd.MM.yyyy HH:mm")</small>
                                    }
                                </div>
                            </div>
                        }

                        <div class="timeline-item @(Model.Status >= ComputerStore.Domain.Enums.OrderStatus.Processing ? "completed" : "")">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <strong>В обработке</strong>
                            </div>
                        </div>

                        <div class="timeline-item @(Model.Status >= ComputerStore.Domain.Enums.OrderStatus.Shipped ? "completed" : "")">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <strong>Отправлен</strong>
                                @if (!string.IsNullOrEmpty(Model.TrackingNumber))
                                {
                                    <br />
                                
                                    <small class="text-muted">@Model.TrackingNumber</small>
                                }
                            </div>
                        </div>

                        <div class="timeline-item @(Model.Status == ComputerStore.Domain.Enums.OrderStatus.Delivered ? "completed" : "")">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <strong>Доставлен</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

        .timeline-item:last-child {
            margin-bottom: 0;
        }

    .timeline-marker {
        position: absolute;
        left: -26px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: #dee2e6;
        border: 3px solid #fff;
    }

    .timeline-item.completed .timeline-marker {
        background: #198754;
    }

    .timeline-item.completed .timeline-content strong {
        color: #198754;
    }
</style>
