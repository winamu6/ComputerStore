@model IEnumerable<ComputerStore.Shared.DTOs.ReviewDto>
@{
    ViewData["Title"] = "Мои отзывы";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-star-fill text-warning"></i> Мои отзывы
    </h2>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var review in Model)
            {
                <div class="col-12 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <!-- Product Name -->
                                    <h5 class="mb-2">
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@review.ProductId"
                                           class="text-decoration-none">
                                            @review.ProductName
                                        </a>
                                    </h5>

                                    <!-- Rating -->
                                    <div class="mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-warning"></i>
                                            }
                                        }
                                        @if (review.IsVerifiedPurchase)
                                        {
                                            <span class="badge bg-success ms-2">
                                                <i class="bi bi-check-circle"></i> Подтверждённая покупка
                                            </span>
                                        }
                                    </div>

                                    <!-- Title -->
                                    <h6 class="mb-2">@review.Title</h6>

                                    <!-- Comment -->
                                    <p class="text-muted mb-2">@review.Comment</p>

                                    <!-- Date -->
                                    <small class="text-muted">
                                        Опубликовано: @review.CreatedAt.ToString("dd MMMM yyyy")
                                        @if (review.UpdatedAt.HasValue)
                                        {
                                            <span class="ms-2">(изменено: @review.UpdatedAt.Value.ToString("dd MMMM yyyy"))</span>
                                        }
                                    </small>

                                    <!-- Helpful Count -->
                                    @if (review.HelpfulCount > 0 || review.NotHelpfulCount > 0)
                                    {
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                <i class="bi bi-hand-thumbs-up"></i> Полезно: @review.HelpfulCount
                                                <span class="ms-2">
                                                    <i class="bi bi-hand-thumbs-down"></i> Не полезно: @review.NotHelpfulCount
                                                </span>
                                            </small>
                                        </div>
                                    }
                                </div>

                                <div class="col-md-4 text-end">
                                    <div class="d-grid gap-2">
                                        <a asp-action="Edit" asp-route-id="@review.Id"
                                           class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil-fill"></i> Редактировать
                                        </a>
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@review.ProductId"
                                           class="btn btn-info btn-sm">
                                            <i class="bi bi-eye-fill"></i> Посмотреть товар
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@review.Id" method="post"
                                              onsubmit="return confirm('Вы уверены, что хотите удалить этот отзыв?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm w-100">
                                                <i class="bi bi-trash-fill"></i> Удалить
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">У вас пока нет отзывов</h4>
            <p class="text-muted">Оставьте отзыв о купленном товаре</p>
            <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-bag-check"></i> Мои заказы
            </a>
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-success">
                <i class="bi bi-shop"></i> Перейти в каталог
            </a>
        </div>
    }
</div>