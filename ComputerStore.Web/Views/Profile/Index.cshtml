@model ProfileViewModel
@{
    ViewData["Title"] = "Мой профиль";
}

<div class="container py-4">
    <h2 class="mb-4">Мой профиль</h2>

    <div class="row">
        <!-- Profile Information -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-circle"></i> Информация
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="bi bi-person-circle display-1 text-primary"></i>
                        <h4 class="mt-2">@Model.Customer.FullName</h4>
                        <p class="text-muted">@User.Identity!.Name</p>
                    </div>

                    <hr />

                    <div class="mb-2">
                        <strong><i class="bi bi-person"></i> Имя:</strong><br />
                        @Model.Customer.FirstName
                    </div>

                    <div class="mb-2">
                        <strong><i class="bi bi-person"></i> Фамилия:</strong><br />
                        @Model.Customer.LastName
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Customer.PhoneNumber))
                    {
                        <div class="mb-2">
                            <strong><i class="bi bi-telephone"></i> Телефон:</strong><br />
                            @Model.Customer.PhoneNumber
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Customer.Address))
                    {
                        <hr />
                        <div class="mb-2">
                            <strong><i class="bi bi-geo-alt"></i> Адрес:</strong><br />
                            @Model.Customer.Address<br />
                            @Model.Customer.City, @Model.Customer.PostalCode<br />
                            @Model.Customer.Country
                        </div>
                    }

                    <hr />

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Редактировать профиль
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Orders and Stats -->
        <div class="col-lg-8">
            <!-- Statistics -->
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card shadow h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-cart-check display-4 text-primary"></i>
                            <h3 class="mt-2">@Model.RecentOrders.Count()</h3>
                            <p class="text-muted mb-0">Заказов</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-clock-history display-4 text-warning"></i>
                            <h3 class="mt-2">@Model.RecentOrders.Count(o => o.Status != ComputerStore.Domain.Enums.OrderStatus.Delivered && o.Status != ComputerStore.Domain.Enums.OrderStatus.Cancelled)</h3>
                            <p class="text-muted mb-0">Активных</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card shadow h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-currency-dollar display-4 text-success"></i>
                            <h3 class="mt-2">$@Model.RecentOrders.Sum(o => o.TotalAmount).ToString("N2")</h3>
                            <p class="text-muted mb-0">Потрачено</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-bag-check"></i> Последние заказы
                    </h5>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-light">
                        Все заказы
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Номер</th>
                                        <th>Дата</th>
                                        <th>Статус</th>
                                        <th>Сумма</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case ComputerStore.Domain.Enums.OrderStatus.Pending:
                                                        <span class="badge bg-warning text-dark">@order.StatusDisplay</span>
                                                        break;
                                                    case ComputerStore.Domain.Enums.OrderStatus.Processing:
                                                        <span class="badge bg-info">@order.StatusDisplay</span>
                                                        break;
                                                    case ComputerStore.Domain.Enums.OrderStatus.Shipped:
                                                        <span class="badge bg-primary">@order.StatusDisplay</span>
                                                        break;
                                                    case ComputerStore.Domain.Enums.OrderStatus.Delivered:
                                                        <span class="badge bg-success">@order.StatusDisplay</span>
                                                        break;
                                                    case ComputerStore.Domain.Enums.OrderStatus.Cancelled:
                                                        <span class="badge bg-danger">@order.StatusDisplay</span>
                                                        break;
                                                }
                                            </td>
                                            <td><strong>$@order.TotalAmount.ToString("N2")</strong></td>
                                            <td>
                                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Детали
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-bag-x display-1 text-muted"></i>
                            <p class="mt-3 text-muted">У вас пока нет заказов</p>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                                Перейти в каталог
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Быстрые действия
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-list-ul"></i> Все заказы
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="bi bi-cart"></i> Моя корзина
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-info w-100">
                                <i class="bi bi-shop"></i> Каталог
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>