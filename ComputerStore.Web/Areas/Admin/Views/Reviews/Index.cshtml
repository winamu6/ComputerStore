@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Модерация отзывов";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var currentFilter = ViewBag.CurrentFilter as string ?? "all";
}

<div class="container-fluid">
    <h2 class="mb-4">Модерация отзывов</h2>

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a asp-action="Index" asp-route-filter="all"
                   class="btn @(currentFilter == "all" ? "btn-primary" : "btn-outline-primary")">
                    <i class="bi bi-list"></i> Все отзывы
                </a>
                <a asp-action="Index" asp-route-filter="pending"
                   class="btn @(currentFilter == "pending" ? "btn-warning" : "btn-outline-warning")">
                    <i class="bi bi-clock"></i> На модерации
                </a>
                <a asp-action="Index" asp-route-filter="approved"
                   class="btn @(currentFilter == "approved" ? "btn-success" : "btn-outline-success")">
                    <i class="bi bi-check-circle"></i> Одобренные
                </a>
                <a asp-action="Index" asp-route-filter="rejected"
                   class="btn @(currentFilter == "rejected" ? "btn-danger" : "btn-outline-danger")">
                    <i class="bi bi-x-circle"></i> Отклонённые
                </a>
                <a asp-action="Index" asp-route-filter="deleted"
                   class="btn @(currentFilter == "deleted" ? "btn-secondary" : "btn-outline-secondary")">
                    <i class="bi bi-trash"></i> Удалённые
                </a>
            </div>
        </div>
    </div>

    <!-- Reviews Table -->
    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Товар</th>
                                <th>Покупатель</th>
                                <th>Рейтинг</th>
                                <th>Отзыв</th>
                                <th>Дата</th>
                                <th>Статус</th>
                                <th>Полезность</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model)
                            {
                                <tr class="@(review.IsDeleted ? "table-secondary" : "")">
                                    <td>
                                        <a asp-controller="Products" asp-action="Details"
                                           asp-route-id="@review.ProductId" target="_blank">
                                            @review.ProductName
                                        </a>
                                    </td>
                                    <td>
                                        @review.CustomerName
                                        @if (review.IsVerifiedPurchase)
                                        {
                                            <br />
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Подтверждённая покупка
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= review.Rating)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-warning"></i>
                                                }
                                            }
                                        </div>
                                        <small class="text-muted">@review.Rating / 5</small>
                                    </td>
                                    <td>
                                        <strong>@review.Title</strong>
                                        <br />
                                        <small class="text-muted">
                                            @(review.Comment.Length > 100 ? review.Comment.Substring(0, 100) + "..." : review.Comment)
                                        </small>
                                        <br />
                                        <a asp-action="Details" asp-route-id="@review.Id" class="small">
                                            Читать полностью
                                        </a>
                                    </td>
                                    <td>
                                        <small>
                                            @review.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                            @if (review.UpdatedAt != null)
                                            {
                                                <br />
                                                <span class="text-muted">Обновлён: @review.UpdatedAt?.ToString("dd.MM.yyyy")</span>
                                            }
                                        </small>
                                    </td>
                                    <td>
                                        @if (review.IsDeleted)
                                        {
                                            <span class="badge bg-secondary">Удалён</span>
                                        }
                                        else if (review.IsApproved)
                                        {
                                            <span class="badge bg-success">Одобрен</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">На модерации</span>
                                        }
                                    </td>
                                    <td>
                                        <small>
                                            <i class="bi bi-hand-thumbs-up text-success"></i> @review.HelpfulCount
                                            <br />
                                            <i class="bi bi-hand-thumbs-down text-danger"></i> @review.NotHelpfulCount
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm">
                                            @if (!review.IsDeleted)
                                            {
                                                @if (!review.IsApproved)
                                                {
                                                    <form asp-action="Approve" asp-route-id="@review.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-success btn-sm w-100">
                                                            <i class="bi bi-check"></i> Одобрить
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form asp-action="Reject" asp-route-id="@review.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-warning btn-sm w-100">
                                                            <i class="bi bi-x"></i> Отклонить
                                                        </button>
                                                    </form>
                                                }

                                                <form asp-action="Delete" asp-route-id="@review.Id" method="post"
                                                      onsubmit="return confirm('Удалить этот отзыв?');" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger btn-sm w-100">
                                                        <i class="bi bi-trash"></i> Удалить
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="Restore" asp-route-id="@review.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-info btn-sm w-100">
                                                        <i class="bi bi-arrow-counterclockwise"></i> Восстановить
                                                    </button>
                                                </form>

                                                <form asp-action="HardDelete" asp-route-id="@review.Id" method="post"
                                                      onsubmit="return confirm('ВНИМАНИЕ! Удалить навсегда? Это действие необратимо!');"
                                                      class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-dark btn-sm w-100">
                                                        <i class="bi bi-trash-fill"></i> Удалить навсегда
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            @switch (currentFilter)
            {
                case "pending":
                    <span>Нет отзывов на модерации</span>
                    break;
                case "approved":
                    <span>Нет одобренных отзывов</span>
                    break;
                case "rejected":
                    <span>Нет отклонённых отзывов</span>
                    break;
                case "deleted":
                    <span>Нет удалённых отзывов</span>
                    break;
                default:
                    <span>Нет отзывов</span>
                    break;
            }
        </div>
    }
</div>