@model ComputerStore.Shared.DTOs.CreateProductDto
@{
    ViewData["Title"] = "Добавить товар";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as IEnumerable<ComputerStore.Shared.DTOs.CategoryDto>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Добавить новый товар
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-12">
                                <h5 class="border-bottom pb-2 mb-3">Основная информация</h5>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Name" class="form-label">Название товара*</label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">Категория*</label>
                                <select asp-for="CategoryId" class="form-select" required>
                                    <option value="">Выберите категорию</option>
                                    @if (categories != null)
                                    {
                                        @foreach (var category in categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SKU" class="form-label">Артикул (SKU)</label>
                                <input asp-for="SKU" class="form-control"
                                       placeholder="Автоматически, если не указан" />
                                <span asp-validation-for="SKU" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label">Краткое описание*</label>
                                <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="DetailedDescription" class="form-label">Подробное описание</label>
                                <textarea asp-for="DetailedDescription" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="DetailedDescription" class="text-danger"></span>
                            </div>

                            <!-- Pricing -->
                            <div class="col-md-12 mt-3">
                                <h5 class="border-bottom pb-2 mb-3">Цены и остатки</h5>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Price" class="form-label">Цена*</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="DiscountPrice" class="form-label">Цена со скидкой</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="DiscountPrice" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="StockQuantity" class="form-label">Количество на складе*</label>
                                <input asp-for="StockQuantity" type="number" class="form-control" required />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>

                            <!-- Product Details -->
                            <div class="col-md-12 mt-3">
                                <h5 class="border-bottom pb-2 mb-3">Детали товара</h5>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Manufacturer" class="form-label">Производитель</label>
                                <input asp-for="Manufacturer" class="form-control" />
                                <span asp-validation-for="Manufacturer" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Model" class="form-label">Модель</label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="ImageUrl" class="form-label">URL изображения</label>
                                <input asp-for="ImageUrl" type="url" class="form-control"
                                       placeholder="/images/products/example.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <small class="text-muted">Укажите путь к изображению или URL</small>
                            </div>

                            <!-- Options -->
                            <div class="col-md-12 mt-3">
                                <h5 class="border-bottom pb-2 mb-3">Настройки</h5>
                            </div>

                            <div class="col-md-12 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsFeatured" class="form-check-label">
                                        Рекомендуемый товар (показывать на главной)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Создать товар
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Подсказки</h5>
                </div>
                <div class="card-body">
                    <h6>Обязательные поля:</h6>
                    <ul>
                        <li>Название товара</li>
                        <li>Категория</li>
                        <li>Описание</li>
                        <li>Цена</li>
                        <li>Количество</li>
                    </ul>

                    <hr />

                    <h6>Рекомендации:</h6>
                    <ul class="small">
                        <li>Используйте понятные названия товаров</li>
                        <li>Заполните производителя и модель для лучшего поиска</li>
                        <li>Укажите SKU для учёта товаров</li>
                        <li>Добавьте изображение для привлекательности</li>
                        <li>Установите скидку для акционных товаров</li>
                    </ul>

                    <div class="alert alert-warning mt-3">
                        <small>
                            <i class="bi bi-exclamation-triangle"></i>
                            После создания товара вы сможете добавить характеристики и дополнительные изображения.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}