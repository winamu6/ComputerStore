@model ComputerStore.Shared.DTOs.UpdateProductDto
@{
    ViewData["Title"] = "Редактировать товар";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as IEnumerable<ComputerStore.Shared.DTOs.CategoryDto>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> Редактировать товар
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-md-12">
                                <h5 class="border-bottom pb-2 mb-3">Основная информация</h5>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Name" class="form-label">Название товара*</label>
                                <input asp-for="Name" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">Категория*</label>
                                <select asp-for="CategoryId" class="form-select" required>
                                    <option value="">Выберите категорию</option>
                                    @if (categories != null)
                                    {
                                        @foreach (var category in categories)
                                        {
                                            <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">
                                                @category.Name
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SKU" class="form-label">Артикул (SKU)</label>
                                <input asp-for="SKU" class="form-control" readonly />
                                <small class="text-muted">Артикул нельзя изменить</small>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label">Краткое описание*</label>
                                <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="DetailedDescription" class="form-label">Подробное описание</label>
                                <textarea asp-for="DetailedDescription" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="DetailedDescription" class="text-danger"></span>
                            </div>

                            <!-- Pricing -->
                            <div class="col-md-12 mt-3">
                                <h5 class="border-bottom pb-2 mb-3">Цены и остатки</h5>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Price" class="form-label">Цена*</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="DiscountPrice" class="form-label">Цена со скидкой</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="DiscountPrice" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                                <small class="text-muted">Оставьте пустым, если нет скидки</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="StockQuantity" class="form-label">Количество на складе*</label>
                                <input asp-for="StockQuantity" type="number" class="form-control" required />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>

                            <!-- Product Details -->
                            <div class="col-md-12 mt-3">
                                <h5 class="border-bottom pb-2 mb-3">Детали товара</h5>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Manufacturer" class="form-label">Производитель</label>
                                <input asp-for="Manufacturer" class="form-control" />
                                <span asp-validation-for="Manufacturer" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Model" class="form-label">Модель</label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="ImageUrl" class="form-label">URL изображения</label>
                                <input asp-for="ImageUrl" type="url" class="form-control"
                                       placeholder="/images/products/example.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="mt-2">
                                        <small class="text-muted">Текущее изображение:</small><br />
                                        <img src="@Model.ImageUrl" alt="Preview" class="img-thumbnail mt-1"
                                             style="max-width: 200px; max-height: 200px; object-fit: contain;" />
                                    </div>
                                }
                            </div>

                            <!-- Options -->
                            <div class="col-md-12 mt-3">
                                <h5 class="border-bottom pb-2 mb-3">Настройки</h5>
                            </div>

                            <div class="col-md-12 mb-3">
                                <div class="form-check">
                                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsFeatured" class="form-check-label">
                                        Рекомендуемый товар (показывать на главной)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save"></i> Сохранить изменения
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Отмена
                            </a>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id"
                               asp-area="" target="_blank" class="btn btn-info btn-lg">
                                <i class="bi bi-eye"></i> Просмотр на сайте
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Информация</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID товара:</strong> @Model.Id</p>
                    <p><strong>SKU:</strong> @Model.SKU</p>

                    <hr />

                    <h6>Быстрые действия:</h6>
                    <div class="d-grid gap-2">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id"
                           asp-area="" target="_blank" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-eye"></i> Просмотр на сайте
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Советы</h5>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li>Обновите цену, если изменилась стоимость</li>
                        <li>Следите за остатками на складе</li>
                        <li>Используйте скидки для акций</li>
                        <li>Установите флаг "Рекомендуемый" для популярных товаров</li>
                        <li>Обновляйте изображения при необходимости</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}