@model ComputerStore.Shared.DTOs.CreateCategoryDto
@{
    ViewData["Title"] = "Добавить категорию";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as IEnumerable<ComputerStore.Shared.DTOs.CategoryDto>;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Добавить новую категорию
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Название категории*</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Описание*</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ParentCategoryId" class="form-label">Родительская категория</label>
                            <select asp-for="ParentCategoryId" class="form-select">
                                <option value="">Без родительской категории (главная)</option>
                                @if (categories != null)
                                {
                                    @foreach (var category in categories.Where(c => c.ParentCategoryId == null))
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                }
                            </select>
                            <small class="form-text text-muted">
                                Если не выбрана, категория будет главной. Если выбрана - подкатегорией.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">URL изображения</label>
                            <input asp-for="ImageUrl" type="url" class="form-control"
                                   placeholder="/images/categories/example.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <strong>Примеры категорий:</strong>
                            <ul class="mb-0">
                                <li>Процессоры (главная)</li>
                                <li>Видеокарты (главная)</li>
                                <li>NVIDIA (подкатегория для Видеокарт)</li>
                                <li>AMD (подкатегория для Видеокарт)</li>
                            </ul>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Создать категорию
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}