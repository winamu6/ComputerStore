@model IEnumerable<ComputerStore.Shared.DTOs.CategoryDto>
@{
    ViewData["Title"] = "Управление категориями";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Управление категориями</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить категорию
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var category in Model.Where(c => c.ParentCategoryId == null))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow h-100">
                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                        {
                            <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name" 
                                 style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                 style="height: 200px;">
                                <i class="bi bi-image fs-1 text-muted"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text text-muted">@category.Description</p>
                            
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-primary">@category.ProductCount товаров</span>
                                @if (category.ParentCategoryId.HasValue)
                                {
                                    <small class="text-muted">
                                        Родитель: @category.ParentCategoryName
                                    </small>
                                }
                            </div>

                            @* Подкатегории *@
                            @{
                                var subCategories = Model.Where(c => c.ParentCategoryId == category.Id).ToList();
                            }
                            @if (subCategories.Any())
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Подкатегории:</small>
                                    <div class="mt-2">
                                        @foreach (var sub in subCategories)
                                        {
                                            <span class="badge bg-secondary me-1 mb-1">
                                                @sub.Name (@sub.ProductCount)
                                            </span>
                                        }
                                    </div>
                                </div>
                            }

                            <div class="btn-group w-100" role="group">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Редактировать
                                </a>
                                <form asp-action="Delete" asp-route-id="@category.Id" method="post" 
                                      onsubmit="return confirm('Вы уверены, что хотите удалить эту категорию?');"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Удалить
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* Подкатегории без родителя (должны быть редки) *@
        var orphanSubCategories = Model.Where(c => c.ParentCategoryId != null &&
                    !Model.Any(p => p.Id == c.ParentCategoryId)).ToList();
        @if (orphanSubCategories.Any())
        {
            <div class="mt-4">
                <h4>Подкатегории без родительской категории</h4>
                <div class="row">
                    @foreach (var category in orphanSubCategories)
                    {
                        <div class="col-lg-3 col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">@category.Name</h6>
                                    <p class="card-text small">@category.ProductCount товаров</p>
                                    <div class="btn-group-vertical w-100 btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">
                                            Редактировать
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" 
                                              onsubmit="return confirm('Удалить?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger w-100">Удалить</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <h4><i class="bi bi-info-circle"></i> Нет категорий</h4>
            <p>Начните с добавления категорий или импортируйте каталог.</p>
            <a asp-action="Create" class="btn btn-primary">Добавить первую категорию</a>
            <a asp-controller="Import" asp-action="Index" class="btn btn-success">Импортировать каталог</a>
        </div>
    }
</div>