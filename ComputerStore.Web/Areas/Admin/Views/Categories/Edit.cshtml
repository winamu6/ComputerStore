@model ComputerStore.Shared.DTOs.UpdateCategoryDto
@{
    ViewData["Title"] = "Редактировать категорию";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as IEnumerable<ComputerStore.Shared.DTOs.CategoryDto>;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> Редактировать категорию
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Название категории*</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Описание*</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ParentCategoryId" class="form-label">Родительская категория</label>
                            <select asp-for="ParentCategoryId" class="form-select">
                                <option value="">Без родительской категории (главная)</option>
                                @if (categories != null)
                                {
                                    @foreach (var category in categories.Where(c => c.ParentCategoryId == null && c.Id != Model.Id))
                                    {
                                        <option value="@category.Id" selected="@(category.Id == Model.ParentCategoryId)">
                                            @category.Name
                                        </option>
                                    }
                                }
                            </select>
                            <small class="form-text text-muted">
                                Если не выбрана, категория будет главной. Если выбрана - подкатегорией.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">URL изображения</label>
                            <input asp-for="ImageUrl" type="url" class="form-control"
                                   placeholder="/images/categories/example.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mt-2">
                                    <small class="text-muted">Текущее изображение:</small><br />
                                    <img src="@Model.ImageUrl" alt="Preview" class="img-thumbnail mt-1"
                                         style="max-width: 200px; max-height: 200px; object-fit: cover;" />
                                </div>
                            }
                        </div>

                        <div class="alert alert-info">
                            <strong>ID категории:</strong> @Model.Id<br />
                            <strong>Примечание:</strong> Нельзя сделать категорию родителем самой себя.
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save"></i> Сохранить изменения
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}